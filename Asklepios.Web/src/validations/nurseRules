import { computed } from 'vue'
import useVuelidate from '@vuelidate/core'
import { required, email, maxLength } from '@vuelidate/validators'

export const nurseRules = computed(() => ({
    name: {
      required,
      maxLength: maxLength(100)
    },
    surname: {
      required,
      maxLength: maxLength(100)
    },
    userId: {
      required,
    },
    departmentId: {
      required
    }
  }))